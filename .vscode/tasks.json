{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "C:\\msys64\\msys2_shell.cmd -defterm -mingw64 -no-start -here -c Scripts/build.sh",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Run QEMU",
            "type": "shell",
            "command": "qemu-system-i386.exe -m 64M -drive file=Build\\floppy.img,format=raw",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "Build"
            ],
            "problemMatcher": []
        },
        {
            "label": "Run QEMU with debugger",
            "type": "shell",
            "command": "qemu-system-i386.exe -m 64M -drive file=Build\\floppy.img,format=raw -S -s",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "Build"
            ],
            "problemMatcher": []
        }
    ]
}